.contenedor
	font-family: 'Asap', sans-serif;
	margin 0 auto
	width 100%
	max-width 960px
	padding 15px
		
/*HEADER*/	
header
	width 100%
	height auto
	max-width 960px
	float left
	margin-bottom 10px
	

