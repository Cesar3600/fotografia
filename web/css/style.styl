/*VARIABLES*/
verdoso = #228C9A
blanco = white
amarillo = #FCA409

tit = 36px
ctit = #424251
stit = 4px

subt = 14px
csubt= #31313F

tparr = 12.5px
aparr = 17px
cparr = verdoso
cparr2 = blanco
sparr = 0.4px

cfparr = #DC4803

/*GENERALES*/
*
	margin 0
	padding 0

.contenedor
	font-family: 'Asap', sans-serif;
	margin 0 auto
	width 100%
	max-width 960px
	padding 15px
		
/*HEADER*/	
header
	width 100%
	height auto
	max-width 960px
	float left
	margin-bottom 10px
	

header .email
	float left
	width 100%
	max-width 100px

header .logo
	float right

header .logo>a>img
	width 100%
	max-width 500px

	
/*NAVEGADOR*/	

nav
	display block
	float left
	width 100%
	max-width 960px
	margin-bottom 13px
	ul
		li
			list-style none
			margin 5px 5px
			display block
			float left
			a
				color verdoso
				display block
				width 120px
				padding 3px 20px
				text-align center
				
			a:hover
				text-decoration none
				color white
				background-color amarillo
				opacity 0.7
				

/*FOOTER*/
footer
	width 100%
	max-width 960px
	background-color blanco
	text-align center
	float left
	margin-top 20px
	p
		margin 1% 20%
		background-color #EEEEEE
		padding 10px
		color cfparr


/*ZONA NO REPETITIVA*/		
		
/*SECTION*/

section
	img
		width 100%
		max-width 960px
	h3
		font-size tit
		color ctit
		letter-spacing stit
	p
		font-size tparr
		line-height aparr
		color cparr
		letter-spacing sparr
		
		
/*CAROUSEL*/			

section .slides
	 display block
	 float left
	 width 100%
	 max-width 960px
	 img
		 width 100%
		 
.slidesjs-pagination
	background-color amarillo
	opacity 0.9
	list-style none
	overflow hidden
	li
		float left
		a
			display block
			padding 10px 20px
			color white
			text-decoration none
		a:hover
			background-color white
			opacity 0.7
			color #FCA409
			

.slides
	.active
		background #E26302 /*#FC940A*/
		opacity 0.6
		
.slidesjs-navigation
	background-color black
	color white
	text-decoration none
	display inline-block
	padding 13px 20px
	float right
.slidesjs-navigation:hover
	color amarillo
	text-decoration none
	
	
	 




